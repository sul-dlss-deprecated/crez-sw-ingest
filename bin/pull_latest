#! /bin/bash
# pull_latest_crez_data
# Pull over the latest course reserve data file from jenson 
#
# Naomi Dushay 2012-03-14

REMOTE_DATA_DIR=/s/Dataload/SearchworksReserves/Data

LOCAL_DATA_DIR=/data/sirsi/crez

FULL_FILE_PATH="$(ssh -i ~/.ssh/id_rsa apache@jenson ls -t $REMOTE_DATA_DIR/reserves-data.* | head -1)"
FILE="$(basename $FULL_FILE_PATH)"

if [ -r $LOCAL_DATA_DIR ]; then
  echo "already have latest data: $FILE"
else
#  echo "getting $FILE"
  scp -p -i ~/.ssh/id_rsa apache@jenson:$FULL_FILE_PATH $LOCAL_DATA_DIR
fi

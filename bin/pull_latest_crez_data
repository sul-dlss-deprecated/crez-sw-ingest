#! /bin/bash
# pull_latest_crez_data
# Pull over the latest course reserve data file from jenson 
#
# Naomi Dushay 2012-03-14

REMOTE_DATA_DIR=/s/Dataload/SearchworksReserves/Data

LOCAL_DATA_DIR=/data/sirsi/crez

FILE="$(echo ls -t | sftp -b- -o 'IdentityFile=~/.ssh/id_rsa' apache@jenson:$REMOTE_DATA_DIR | head -1)"
    
sftp -o 'IdentityFile=~/.ssh/id_rsa' apache@jenson:$REMOTE_DATA_DIR/$FILE $LOCAL_DATA_DIR

